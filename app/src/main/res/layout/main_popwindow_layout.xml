<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="8dp"
    app:elevation="3dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/img_close"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.administrator.mapper.weight.CircleImageView
                    android:id="@+id/img_user_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_main_head" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:text="我的名字"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@mipmap/ic_location_item"
                        android:drawablePadding="5dp"
                        android:text="浙江省嘉兴学院"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="5"
                android:padding="8dp"
                android:text="进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行" />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>


