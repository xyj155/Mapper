<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="3dp"
    app:elevation="3dp">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.administrator.mapper.weight.CircleImageView
                android:layout_width="40dp"
                android:id="@+id/img_user_head"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_main_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="我的名字"
                    android:id="@+id/tv_username"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/ic_location_item"
                    android:drawablePadding="5dp"
                    android:text="浙江省嘉兴学院"
                    android:id="@+id/tv_location"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/img_banner"
            android:padding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/tv_content"
            android:maxLines="5"
            android:padding="8dp"
            android:text="进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行进行" />
    </LinearLayout>
</android.support.v7.widget.CardView>


