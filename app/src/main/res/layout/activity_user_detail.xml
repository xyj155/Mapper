<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="8dp" />

        <View
            android:id="@+id/ll_user"
            android:layout_width="5dp"
            android:layout_height="86dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:layout_editor_absoluteX="8dp" />

        <com.example.administrator.mapper.weight.CircleImageView
            android:id="@+id/img_main_head"
            layout_constraintLeft_toLeftOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_main_head"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:layout_editor_absoluteX="15dp" />

        <TextView
            android:id="@+id/tv_main_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="大二架构师"
            android:textColor="#000"
            android:textSize="17dp"
            app:layout_constraintLeft_toRightOf="@+id/img_main_head"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="这个主人很懒，还没有什么东西啊！"
            app:layout_constraintLeft_toRightOf="@+id/img_main_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_username"
            android:layout_marginStart="20dp" />

        <View
            android:layout_width="353dp"
            android:layout_height="10dp"
            android:background="#fafafa"
            app:layout_constraintTop_toBottomOf="@+id/ll_user"
            tools:layout_editor_absoluteX="8dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
